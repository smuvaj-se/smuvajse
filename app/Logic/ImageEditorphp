class ImageEditor
{
	//Maksimalana duzina/sirina finalne slike
	protected $maximum_length = 800;

	//Provera dimenzija slike (ako je slika veca - smanjuje je)
	public function check_size($file) 
	{
		list($width, $height) = getimagesize($file);
		if ($height<$width) { 
			if ($height < $this->maximum_length) {
				
			}
		}
	}
	public function set_dimensions($file)
	{
		list($width, $height) = getimagesize($file);


	}

	public function resize_image($file, $w, $h, $crop=FALSE) {
        list($width, $height) = getimagesize($file);
        $r = $width / $height;
        if ($crop) {
            if ($width > $height) {
                $width = ceil($width-($width*abs($r-$w/$h)));
            } else {
                $height = ceil($height-($height*abs($r-$w/$h)));
            }
            $newwidth = $w;
            $newheight = $h;
        } else {
            if ($w/$h > $r) {
                $newwidth = $h*$r;
                $newheight = $h;
            } else {
                $newheight = $w/$r;
                $newwidth = $w;
            }
        }
        $src = imagecreatefromjpeg($file);
        $dst = imagecreatetruecolor($newwidth, $newheight);
        imagecopyresampled($dst, $src, 0, 0, 0, 0, $newwidth, $newheight, $width, $height);

        return $dst;
    }

    public function initial_resize()
}